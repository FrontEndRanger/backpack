{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "module": "esnext",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "esnext",
        "sourceMap": true,
        "lib": ["es6", "esnext"],
        "jsx": "react",
        "allowSyntheticDefaultImports": true
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "**/*.spec.tsx", "**/*.stories.tsx"]
}
