{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "declaration": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*.tsx", "src/**/*.ts"],
    "exclude": ["node_modules", "**/__tests__/*.spec.tsx", "**/*.stories.tsx"]
}
